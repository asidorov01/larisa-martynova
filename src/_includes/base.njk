<!DOCTYPE html>
<html lang="{{ lang or 'de' }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Larisa Martynova</title>
    <meta name="description" content="{{ description or 'Beeidigte Dolmetscherin fÃ¼r die russische Sprache in Leipzig' }}">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .smooth-scroll {
            scroll-behavior: smooth;
        }
        @media print {
            .no-print { display: none; }
        }
    </style>
</head>
<body class="bg-gray-50 text-gray-900 smooth-scroll">

    {% if not isLegalPage %}
    <!-- Language Toggle -->
    <div class="no-print fixed top-4 right-4 z-50 flex gap-2 bg-white shadow-lg rounded-lg p-2">
        <a href="/" class="px-3 py-1 rounded {% if lang == 'de' %}bg-blue-600 text-white{% else %}bg-gray-200 text-gray-700 hover:bg-gray-300{% endif %}">DE</a>
        <a href="/index_ru/" class="px-3 py-1 rounded {% if lang == 'ru' %}bg-blue-600 text-white{% else %}bg-gray-200 text-gray-700 hover:bg-gray-300{% endif %}">RU</a>
    </div>
    {% endif %}

    <!-- Main Content -->
    <main>
        {{ content | safe }}
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-8 mt-16">
        <div class="max-w-4xl mx-auto px-4 text-center">
            <p class="mb-4">&copy; {{ currentYear or '2026' }} Larisa Martynova. Alle Rechte vorbehalten.</p>
            <div class="flex justify-center gap-6 text-sm">
                <a href="/impressum/" class="hover:text-blue-300 transition">Impressum</a>
                <a href="/datenschutz/" class="hover:text-blue-300 transition">Datenschutz</a>
            </div>
        </div>
    </footer>

    <script>
        // Set current year dynamically
        document.addEventListener('DOMContentLoaded', function() {
            const yearElements = document.querySelectorAll('.current-year');
            const currentYear = new Date().getFullYear();
            yearElements.forEach(el => el.textContent = currentYear);
        });
    </script>
</body>
</html>
